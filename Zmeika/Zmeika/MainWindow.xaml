        <TextBlock HorizontalAlignment="Left" Margin="205,192,0,0" TextWrapping="Wrap" Foreground="Aqua" Text="Выпало:" Name="ra" VerticalAlignment="Top" Width="120"/>

    </Grid>
</Window>
